@{
    ViewBag.Title = "Router";
}

<html>
<head>
    <meta  charset="utf-8"/>
    <link href="~/Scripts/vue-dev/benchmarks/dbmon/lib/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/vue-dev/dist/vue.js"></script>
    <script src="~/Scripts/vue-dev/dist/vue-router.js"></script>
</head>
<body>
    @*<div class="list-group">
        <a class="list-group-item" v-link="{ path: '/home'}">Home</a>
        <a class="list-group-item" v-link="{ path: '/about'}">About</a>
    </div>

    <div id="app">
        <router-view></router-view>
       
    </div>*@

    <div id="demo">
        <div class="row">
            <div class="col-xs-offset-2 col-xs-8">
                <div class="page-header">
                    <h2>Router Basic - 01</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-2 col-xs-offset-2">
                <div class="list-group">
                    <!--使用指令v-link进行导航-->
                    @*<a class="list-group-item" v-bind:link="{ path: '/Home'}">Home</a>
                    <a class="list-group-item" v-bind:link="{ path: '/About'}">About</a>*@
                    <router-link to="/Home" class="list-group-item">Home</router-link>
                    <router-link to="/About" class="list-group-item">About</router-link>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="panel">
                    <div class="panel-body">
                        <!--用于渲染匹配的组件-->
                        <router-view></router-view>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        // 开启debug模式
        Vue.config.degbug = true;
        var Home = Vue.extend({
            template: "<div><h1>Home</h1><p>{{msg}}</p></div>",
            data: function () {
                return {
                    msg:"Hello Home"
                }
            }
        });
        var About = Vue.extend({
            template: "<div><h1>About</h1><p>{{msg}}</p></div>",
            data: function () {
                return {
                    msg: "Hello About"
                }
            }
        });

        var router = new VueRouter({
            routes: [
                { path: '/Home', component: Home },
                { path: '/About', component: About },
                { path: "/", redirect: '/Home' },
            ]
        });
      
        var demo = new Vue({
            el: "#demo",
            router: router,
            //template: '<router-view></router-view>'
        });
    </script>
</body>
</html>
